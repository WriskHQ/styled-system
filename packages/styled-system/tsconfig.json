{
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "**/__tests__/*"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/esm",
    "declarationDir": "dist/types",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ]
  }
}
