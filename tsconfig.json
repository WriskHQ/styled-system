{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "removeComments": true,
    "allowJs": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "files": [
    "babel.config.js",
    "jest.config.js",
    "jest.dist.js"
  ],
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules"
  ]
}
